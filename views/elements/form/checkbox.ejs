<%
let count = 0;
if (options.length < 5) {
	var css = "form-check-inline";
} else {
	css = "";
}

options.forEach(function(item) {%>
<div class="form-check <%- css %>">
	<label class="form-check-label" for="<%- name %>[<%- count %>]">
		<input  class="form-check-input"
			    type="checkbox"
			    name="<%- name %>[<%- count %>]"
			    id="<%- name %>[<%- count %>]"
			    value="<%- item %>" <%- item === value ? "checked" : "" %>
				data-type="<%- dataType %>"
		>
		<span class="form-check-sign">
            <span class="check"></span>
        </span>
		<%- item %>
	</label>
</div>
<% count++;}) %>
