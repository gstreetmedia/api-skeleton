<%
let count = 0;
options.forEach(function(item) {%>
<div class="form-check">

	<label class="form-check-label" for="<%- id + count %>">
		<input class="form-check-input" type="radio" name="<%- name %>" id="<%- id + count %>" value="<%- item %>" <%- item === value ? "checked" : "" %> <%- required %> >
		<span class="circle">
            <span class="check"></span>
        </span>
		<%- item %>
	</label>
</div>
<% count++;}) %>
