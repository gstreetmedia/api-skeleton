<% if (
        (model.schema.properties[key] && model.schema.properties[key].type === "object") ||
        (model.relations && model.relations[key])
) {

    let instance = new Date().getTime();

%>
    <div class="col-lg-12">
        <div class="form-group form-row">
            <label class="label col-lg-1 col-md-2"><%- helpers.inflector.classify(helpers.inflector.underscore(key)) %></label>
            <div class="col-lg-11 col-md-10 ">
                <div class="card">
                    <script>
						var <%= key + "_" + instance %> = <%- JSON.stringify(value) %>;
                    </script>
                    <div class="card-body" data-json-view="<%= key + "_" + instance %>">
                    </div>
                </div>
            </div>
        </div>
    </div>
<% } else { %>
    <% if (model.schema.properties[key] && model.schema.properties[key].maxLength && model.schema.properties[key].maxLength > 1000) { %>
        <div class="col-lg-6 col-md-6">
            <div class="form-group form-row">
                <label class="label col-md-3 col-lg-4"><%- helpers.inflector.classify(helpers.inflector.underscore(key)) %></label>
                <div class="col-md-9 col-lg-8">
                    <div class="form-control"
                         style="height: auto;min-height: 40px;overflow: hidden;text-overflow: ellipsis">
                        <% if (key === "url") { %>
                        <img src="<%- value %>" class="w-100" />
                        <% } %>
                        <%- helpers.format(model, key, value) %>
                    </div>
                </div>
            </div>
        </div>
    <% } else { %>
        <div class="col-lg-6 col-md-6">
            <div class="form-group form-row">
                <label class="label col-md-3 col-lg-4"><%- helpers.inflector.classify(helpers.inflector.underscore(key)) %></label>
                <div class="col-md-9 col-lg-8">

                    <div class="form-control"
                         style="height: auto;min-height: 40px;overflow: hidden;text-overflow: ellipsis">
                        <%
                        if (model.foreignKeys && model.foreignKeys[key]) {
                            var m = "";
                            var name = value;
                            if (model.foreignKeys[key].modelClass) {
                                if (model.foreignKeys[key].modelClass.schema) {
                                    m = helpers.inflector.dasherize(
                                            helpers.inflector.underscore(
                                                    helpers.inflector.singularize(model.foreignKeys[key].modelClass.schema.tableName)
                                            )
                                    );

                                }
                            }

                            if (data.foreignKeys && data.foreignKeys[key] && data.foreignKeys[key].name) {
                                name = data.foreignKeys[key].name;
                            }
                        %>
                        <a href="/admin/<%- m %>/<%- value %>/view">
                            <%- name %>
                        </a>
                        <%
                        } else {
                        %>
                            <%- helpers.format(model, key, value) %>
                        <%
                        }
                        %>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
<% } %>
